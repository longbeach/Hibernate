<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping>
   <class name="com.hibernate.tutorial.Game" abstract="true">
      <id name="id" type="int" column="game_id">
         <generator class="hilo"/>
      </id>
 
      <property name="name" column="name" type="string"/>
 
      <union-subclass name="com.hibernate.tutorial.IndoorGame" table="INDOOR_GAME">  
           <property name="ageGroup" column="age_group" type="string"></property>  
            <property name="numberOfPlayers" column="number_of_players" type="int"></property>  
      </union-subclass>  
 
      <union-subclass name="com.hibernate.tutorial.OutdoorGame" table="OUTDOOR_GAME">  
 
         <property name="requiredArea" column="area_required" type="string"></property> 
      </union-subclass>  
 
    </class>
</hibernate-mapping>